<h1>Show</h1>

<div class = "row">
	<div class = "col-md-12">
	
	<ul>


	<li>
		<p>title: <%= @activity.title%></p>
		<p>category: <%= @activity.category%></p>
		<p>location: <%= @activity.location%></p>		
		<p>date: <%= @activity.date%></p>
		<p>priority: <%= @activity.priority%></p>
		
		<%= raw(@activity.content)%>
		
		<%= link_to 'Edit' , edit_activity_path(@activity) , class: 'btn brn-primary btn-lg'%>
		<%= link_to 'Delete' , activity_path(@activity) , method: :delete , class: 'btn brn-primary btn-lg'%>

	</li>

	</ul>

	</div>
</div>